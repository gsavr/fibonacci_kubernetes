name: Deploy FibApp
on:
  push:
    branches:
      - master # check your repo, your default branch might be main!

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - run: docker login -u ${{ secrets.DOCKERHUB_USERNAME }} -p ${{ secrets.DOCKERHUB_TOKEN }}
      - run: docker build -t giorgiosavron/react-test -f ./client/Dockerfile.dev ./client
      - run: docker run -e CI=true giorgiosavron/react-test npm test

      - run: docker build -t giorgiosavron/fibapp-client-kub ./client
      - run: docker build -t giorgiosavron/fibapp-nginx-kub ./nginx
      - run: docker build -t giorgiosavron/fibapp-server-kub ./server
      - run: docker build -t giorgiosavron/fibapp-worker-kub ./worker

      - run: docker push giorgiosavron/fibapp-client-kub
      - run: docker push giorgiosavron/fibapp-nginx-kub
      - run: docker push giorgiosavron/fibapp-server-kub
      - run: docker push giorgiosavron/fibapp-worker-kub

      - name: Generate deployment package
        run: zip -r deploy.zip . -x '*.git*'

      - name: Deploy to EB
        uses: einaregilsson/beanstalk-deploy@v18
        with:
          aws_access_key: ${{ secrets.AWS_ACCESS_KEY }}
          aws_secret_key: ${{ secrets.AWS_SECRET_KEY }}
          application_name: fibApp
          environment_name: Fibapp-env
          existing_bucket_name: elasticbeanstalk-us-east-2-177327512276
          region: us-east-2
          version_label: ${{ github.sha }}
          deployment_package: deploy.zip
